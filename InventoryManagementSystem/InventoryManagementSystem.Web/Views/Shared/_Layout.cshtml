<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagementSystem.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagementSystem.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container-fluid">
                <a href="#" class="navbar-brand"><h3>IMS</h3></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        ﻿@if (User.IsInRole(UserRoles.Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Product Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="Index">Product</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Category" asp-action="Index">Category</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    User Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Index">AllUser</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Supplier">Supplier</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="SalesMan">SalesMan</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="SalesMan">SalesMan</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Consumer">Consumer</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Admin">Admin</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        ﻿@if (User.IsInRole(UserRoles.Purchaser))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Purchase Orders
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Purchaser" asp-action="Index">All</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Purchaser" asp-action="PendingPurchases">Pending</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Purchaser" asp-action="VerifiedPurchases">Delivered</a>
                                    </li>
                                </ul>
                            </li>

                        }
                        ﻿@if (User.IsInRole(UserRoles.Supplier))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Puechase Orders
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="Index">Requested</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Category" asp-action="Index">Delivered</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Category" asp-action="Index">Canceiled</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_RegisterLoginLogoutPartial" />
                </div>
            </div>
        </nav>
    </header>
    <!-- Main Content -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @if (TempData["error"] != null)
            {
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

                <script type="text/javascript">
                    toastr.error('@TempData["error"]');
                </script>
            }
            @if (TempData["success"] != null)
            {
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

                <script type="text/javascript">
                    toastr.success('@TempData["success"]');
                </script>
            }
            @RenderBody()
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - InventoryManagementSystem.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
